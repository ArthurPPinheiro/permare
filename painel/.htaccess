RewriteRule ^projeto/edit/([0-9]+)?$ index.php?page=projeto/edit&projeto_id=$1
RewriteRule ^projeto/delete/(.+)?$ index.php?page=projeto/delete&projeto_ids=$1

RewriteRule ^usuarios/?$ index.php?page=usuarios/list
