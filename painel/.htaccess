RewriteEngine on

RewriteRule ^login/?$ login.php
RewriteRule ^logout/?$ logout.php
RewriteRule ^sair/?$ sair.php

RewriteRule ^dashboard/?$ index.php?page=dashboard

RewriteRule ^todo/?$ index.php?page=todo/list
RewriteRule ^todo/add?$ index.php?page=todo/add
RewriteRule ^todo/edit/([0-9]+)?$ index.php?page=todo/edit&task_id=$1
RewriteRule ^todo/delete/(.+)?$ index.php?page=todo/delete&task_ids=$1

RewriteRule ^portifolio/?$ index.php?page=portifolio/list
RewriteRule ^portifolio/add?$ index.php?page=portifolio/add
